{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "process",
            "command": "${config:renpy.renpyPath}",
            "args": [
                "${workspaceFolder}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "lint",
            "type": "process",
            "command": "${config:renpy.renpyPath}",
            "args": [
                "--lint",
                "${workspaceFolder}"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}